<div class="row">
	<div class="col-sm-6 col-sm-offset-2">
		<h3>Request a Quote</h3>
	</div>
</div>
<div class="text-center">

<%= form_for @user, :html => {:class => 'form-horizontal'} do |f| %>
<% if @user.errors.any? %>
	<% @user.errors.each do |attr,msg| %>
		<p><%= msg%> </p>
	<% end %> 
<% end %>
	
<div class="form-group">
	<%= f.label :fname," First Name", class: "col-sm-2 control-label" %>
	<div class="col-sm-6">
		<%= f.text_field :fname, class: "form-control" %>
	</div>
	<div class="form-group">
		<%= f.label :lname, "Last Name", class: "col-sm-2 control-label" %>
		<div class="col-sm-6">
			<%= f.text_field :lname, class: "form-control" %>
		</div>
	</div>
	<div class="form-group">
		<%= f.label :email, class: "col-sm-2 control-label" %>
		<div class="col-sm-6">
			<%= f.email_field :email, class: "form-control" %>
		</div>
	</div>

	<div class="form-group">
		<%= f.label :pnum, "Phone Number", class: "col-sm-2 control-label" %>
		<div class="col-sm-6">
			<%= telephone_field :user, :pnum, class: "form-control" %>
		</div>
	</div>
	<div class="form-group">
		<%= f.label :content, class: "col-sm-2 control-label" %> 
		<div class="col-sm-6">
			<%= f.text_area :content, class: "form-control" %> 
			<br>
			<%= f.submit "Submit", class: "btn btn-default col-sm-12" %>
		</div>
	</div>
	<% end %>
</div>