
<div class="row">
	<div class="col-md-8 col-md-offset-3">
		<h1>Admin Sign In</h1>
		<%= form_tag '/login', method: :post, class: "form-inline" do %>
		<div class="form-group has-success has-feedback">
			<%= label_tag :email, nil, class: "sr-only control-label", for: "inputSuccess2" %>
			<div class="input-group">
				<span class="input-group-addon">@</span>
				<%= email_field_tag :email, nil, placeholder: "youremail@email.com", class: "form-control", id: "inputSuccess2", ariadescribedby: "inputGropuSuccess2Status" %>
			</div>
			<div class="input-group">
			<%= label_tag :password, nil, class: 'sr-only' %>
			<%= password_field_tag :password, nil, placeholder: "Password", class: "form-control" %>
			</div>

			<%= submit_tag "Login", class: "btn btn-default btn-block" %>
		</div>
		<% end %>
	</div>
</div>
<br>
<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<p class="bg-danger">If you have forgot your password, please contact your admin team directly.</p>
	</div>
</div>